<Page x:Class="ProductAppWpf.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductAppWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20">
            <StackPanel>
                <TextBlock Text="Produktens namn" Margin="0 0 0 5" />
                <TextBox Name="tb_productName" Padding="3" Margin="0 0 0 10" />
                <TextBlock Text="Produktens pris" Margin="0 0 0 5" />
                <TextBox Name="tb_productPrice" Padding="3" Margin="0 0 0 10" />
                <Button Name="btn_product_save" Click="btn_product_save_Click" Content="Spara nya produkten" Padding="3" />
                <TextBlock Text="Välj product du vill ändra" Margin="0 40 0 10"/>
                <ComboBox Name="cb_changeProduct" DisplayMemberPath="Value" />
                <TextBlock Text="Namn" Margin="0 10 0 0"/>
                <TextBox x:Name="tb_changeName" Margin="0 10 0 10"/>
                <TextBlock Text="Price"/>
                <TextBox x:Name="tb_changePrice" Margin="0 0 0 10"/>
                <Button x:Name="btn_saveProductChange" Content="Spara ändring" Click="btn_saveProductChange_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="20">

        </Grid>
    </Grid>
</Page>
